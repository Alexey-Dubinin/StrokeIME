<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.me.strokeime"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:label="@string/ime_label" android:icon="@drawable/icon">
        <service android:name="StrokeIME"
            android:label="@string/ime_label"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data android:name="android.view.im" android:resource="@xml/method" />
        </service>
        <activity android:name="StrokeIMESettings"
                  android:label="@string/ime_settings_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--category android:name="android.intent.category.LAUNCHER" /-->
            </intent-filter>
        </activity>
    </application>
</manifest> 
